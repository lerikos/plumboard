<% provide(:title, 'Sign Up') %>
<%= content_for :content do %>
  <div class="center">
    <h2>Create Your Account</h2>
  </div>

  <div class="sm-top row">
    <%= form_for([resource_name, resource.with_picture], :url => registration_path(resource_name)) do |f| %>
      <%= render partial: 'shared/error_messages', :locals => { :target => f.object } %>
      <%= render partial: 'shared/show_user_photo', locals: { f: f, model: resource, file_name: 'person_icon.jpg' } %>

      <div class="span5">
        <div id='signup'>
          <%= render partial: 'shared/user_info', locals: { f: f } %>
    	  <div><%= f.password_field :password, placeholder: 'New password' %></div>
    	  <div><%= f.password_field :password_confirmation, placeholder: 'Re-enter password' %></div>
        </div>

    	<div class='mtop mbot'><%= f.submit "Register", class: "btn btn-large btn-primary submit-btn" %></div>
        <div class='mtop sdescr'>By registering, I accept <%= link_to "Pixiboard's Terms of Service", terms_path, class: 'terms-link' %> and  
	   <%= link_to "Privacy Policy", privacy_path, class: 'terms-link' %>. We don't share your personal info.</div>
      </div>
    <% end %>
  </div>
<% end %>
