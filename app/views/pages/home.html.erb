<%= content_for :subhead do %>
  <div class='row'>
    <div class='float-left width360'>
      <%= image_tag 'px_word_logo.png', class: 'px-logo' %>
    </div>
    <div class='mtop nav pull-right'>
      <%= link_to 'How It Works', '#', class: 'width120' %>
      <%= link_to 'Help', '#', class: 'left-margin' %>
    </div>
  </div>
<% end %>
<%= content_for :topcontent do %>
  <div class='container'>
    <div class='row mtop'>
      <div class='mtop span7 home-title-grp'>
        <span class='home-title'><%= PIXI_KEYS['pixi']['caption'] %></span><br />
        <span class='tag-line'><%= PIXI_KEYS['pixi']['tag_line'] %></span>
      </div>
      <div class='mtop span4 pull-right div-blk-border round'>
        <%= render partial: 'shared/signin_form', locals: { rmbrFlg: false } %>
      </div>
    </div>
  </div>
<% end %>
<%= content_for :content do %>
  <div class='mtop row mbot'>
    <div class='span6'>
      <h4>Recent Pixis</h4>
      <div id='recent-pixis'><%= render partial: 'shared/recent_listings' %></div>
    </div>
    <div class='span6'>
      <div id='recent'><%= render partial: 'shared/pixi_stars' %></div>
    </div>
  </div>
<% end %>
