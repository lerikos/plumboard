<% provide(:title, 'Home') %>
<%= content_for :subhead do %>
  <div id='nav-home-menu'>
    <%= render partial: 'shared/navbar', locals: { menu_name: 'Home', loc_name: @loc_name } %>
  </div>
<% end %>

<%= content_for :content do %>
  <% cache @categories do %>
    <div id="pxboard">
      <%= render partial: 'shared/category', collection: @categories %>
    </div> 
  <% end %>

  <nav id="px-nav">
    <%= render 'shared/category_next_page' %>
  </nav>

  <div class='span1 sm-bot'>
    <%= link_to 'Scroll', '#', class: 'scrollup clear-link' %>
  </div>
<% end %>
