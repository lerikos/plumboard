<% if @category.errors.any? %>
  $("#notice").hide(300);
  $("#form_errors").html("<%= escape_javascript( render(partial: 'shared/error_messages', locals: {target: @category})) %>");
<% else %>
  $("#notice").html("<%= escape_javascript( raw render(partial: 'layouts/notices')) %>");
  $("#notice").show(300);
  $("#cat-form").html("<%= escape_javascript(render(partial: 'shared/categories')) %>");
<% end %>

$('#spinner').hide(300);

