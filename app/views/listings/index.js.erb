<% if params[:page] %>
  $("#pxboard").append("<%= escape_javascript(render(partial: 'shared/listings')) %>");
  $('a.nxt-pg').attr('href', '#{listings_path page: @listings.next_page}');
<% else %>  
  $("#pxboard").html("<%= escape_javascript(render(partial: 'shared/listings')) %>");
  $("#px-nav").html("<%= escape_javascript(render(partial: 'shared/listing_next_page')) %>");

  // set next page path
  $('#px-container').infinitescroll({pathParse:["/listings?page=", ""]});

  // initialize infinite scroll
  load_masonry('#px-nav', '#px-nav a.nxt-pg', '#pxboard .item');
<% end %>  

// reload board
reload_board(this);

$('#nearby-map').hide('fast');
$('#spinner').hide(300);
