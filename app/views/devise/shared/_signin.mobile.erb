<div class="mtop">
  <div id="mform">
    <%= form_for("user", :url => user_session_path) do |f| %>
      <%= render "mobile/error_messages", :target => resource %>  
      <div><%= f.email_field :email, placeholder: 'Email', :autofocus => true, class: 'fld' %></div>
      <div><%= f.password_field :password, placeholder: 'Password', size: 20, class: 'fld' %></div>
	  
      <%= f.submit "Sign In", "data-theme"=>"b" %>
      <%= link_to "Sign Up!", new_user_registration_path, "data-role" => 'button', class: 'signup-btn' %>
      <%= link_to user_omniauth_authorize_path(:facebook), id: 'fb-btn' do %>
          <%= image_tag 'icon_facebook.png', class: 'lrg-img-icon' %>
      <% end %>
    <% end %>
  </div> 
</div>

 
