<% if @conversation.errors.any? %>
  $("#notice").hide(300);
  $("#form_errors").html("<%= escape_javascript( render(partial: 'shared/error_messages', locals: {target: @conversation})) %>"); 
<% else %>
  $("#notice").html("<%= escape_javascript(flash[:notice])%>");
  $("#notice").show(300);

  // check for mobile
  if($('#post-list-item').length > 0) {
    goToUrl('/conversations', true);
  }
  else {
    <%= render(:partial => 'shared/refresh_messages', locals: {conversation: @conversation}) %>
  }
<% end %>

// hide spinner
$("#spinner").hide('fast'); 

