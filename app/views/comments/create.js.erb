<% if @comment.errors.any? %>
  $("#comment_errors").html("<%= escape_javascript( render(partial: 'shared/error_messages', locals: {target: @comment})) %>");
<% else %>
  var url = '/listings/' + "<%= params[:comment][:pixi_id] %>"

  // check for mobile
  if($('#seller-comment').length > 0) {
    goToUrl(url, true);
  }
  else {
    $("#pixi-tabs").html("<%= escape_javascript( render(partial: 'shared/show_listing_details', locals: {listing: @listing}) ) %>");
    $("#comment_form").html("<%= escape_javascript( render(partial: 'shared/comments', locals: {listing: @listing}) ) %>");
    $("#comment_content").val('');
    $('#pixi-tabs li:eq(1) a').tab('show');
  }
<% end %>

uiLoading(false);
$('#spinner').hide(300);

