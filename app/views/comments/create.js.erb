<% if @comment.errors.any? %>
  $("#comment_errors").html("<%= escape_javascript( render(partial: 'shared/error_messages', locals: {target: @comment})) %>");
<% else %>
  var url = '/listings/' + "<%= params[:comment][:pixi_id] %>"

  // check for mobile
  if($('#seller-comment').length) {
    goToUrl(url, true);
  }
  else {
    $("#comment_form").html("<%= escape_javascript( render(partial: 'shared/comments') ) %>");
    $("#comment_content").val('');
  }
<% end %>

uiLoading(false);
$('#spinner').hide(300);

