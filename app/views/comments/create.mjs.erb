<% if @comment.errors.any? %>
  $("#comment_notice").hide(300);
  $("#comment_errors").html("<%= escape_javascript( render(partial: 'mobile/error_messages', locals: {target: @comment})) %>");
<% else %>
  $("#comment_notice").show(300);
  $("#comment_form").html("<%= escape_javascript( render(partial: 'mobile/comments') ) %>");
<% end %>

$('#spinner').hide(300);

