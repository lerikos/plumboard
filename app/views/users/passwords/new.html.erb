<% provide(:title, 'Forgot Password') %>
<%= content_for :content do %>
  <div class='mtop center-wrapper'>
    <h2>Forgot password?</h2>
  </div>

  <div class="sm-top row">
    <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
    <%= render partial: 'shared/error_messages', :locals => { :target => resource } %>
    <div class="mtop span4 offset4">
	<div id='signup'>
          <div><%= f.email_field :email, placeholder: 'Email', :autofocus => true %></div>
        </div>
        <div><%= f.submit "Resend Password", class: "btn btn-large btn-primary submit-btn" %></div><br />
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
<% end %>

