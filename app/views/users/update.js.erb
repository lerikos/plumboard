<% if @user.errors.any? %>
  $("#notice").hide(300);
  $("#form_errors").html("<%= escape_javascript( render(partial: 'shared/error_messages', locals: {target: @user})) %>");
<% else %>
  var url = '/settings'

  // check for mobile
  if($('#usr-prof').length > 0) {
    goToUrl(url, true);
    uiLoading(false);
  }
  else {
    $("#notice").html("<%= escape_javascript( raw render(partial: 'layouts/notices')) %>");
    $("#notice").show(300);
    $("#user_form").html("<%= escape_javascript( raw render(partial: @target)) %>");
    $("#usr_fname").html("<%= escape_javascript( raw render(partial: 'shared/menu_user_name', locals: {user: @user})) %>");
  }
<% end %>

$('#spinner').hide(300);

