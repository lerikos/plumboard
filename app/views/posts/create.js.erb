<% if @post.errors.any? %>
  $("#form_errors").html("<%= escape_javascript( render(partial: 'shared/error_messages', locals: {target: @post})) %>");
<% else %>
  var url = '/listings/' + "<%= params[:post][:pixi_id] %>"

  // check for mobile
  if($('#seller-post').length > 0) {
    goToUrl(url, true);
    uiLoading(false);
  }
  else {
    $('#post_form').toggle();
    $("#px-panel").html("<%= escape_javascript( render(partial: 'shared/listing_panel', locals: {listing: @listing}) ) %>");
    $("#post_form").html("<%= escape_javascript( raw render(partial: 'shared/contact') ) %>");
  }
<% end %>

$('#spinner').hide(300);

