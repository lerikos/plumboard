<%= content_for :head do %>
  <%= render partial: 'layouts/header', locals: { psize: 'hdr-logo' } %>
<% end %>

<%= content_for :srch_content do %>
  <div class="px-search sm-top">
    <%= render 'mobile/search' %>
  </div>
<% end %>

<%= content_for :subhead do %>
  <div class="board-top">
    <%= render 'mobile/category_list' %>
    <div id='pixi-loc' style='display:none'>
      <%= render partial: 'mobile/sites', locals: { ptype: false } %>
    </div>
  </div> 
<% end %>

<%= content_for :content do %>
  <div id="pxboard">
    <%= render 'mobile/listings' %>
  </div> 

  <nav id="px-nav">
    <%= render 'mobile/listing_next_page' %>
  </nav>
<% end %>
