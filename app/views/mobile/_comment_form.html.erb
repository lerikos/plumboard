<% if @comment %>  
  <%= form_for @comment, remote: true, id: 'comment-doc', :html =>{"data-ajax" => false} do |f| %> 
    <div id="comment_notice" style="display:none"></div>
    <div id="comment_errors">
      <%= render partial: 'mobile/error_messages', :locals => { :target => f.object } %>
    </div>

    <%= f.hidden_field 'pixi_id', value: @listing.pixi_id %>
    <%= f.hidden_field 'user_id', value: @user.id %>

    <div class='clear-all'>
      <table>
        <tr>
          <td><%= f.text_area 'content', placeholder: 'Post a comment on item...', class: 'slide-menu', 'data-mini'=>'true' %></td>
          <td><%= f.submit 'Post', id: 'comment-btn', 'data-inline'=>"true", 'data-mini'=>'true', 'data-theme'=>'b' %></td>
        </tr>
      </table>
    </div>
  <% end %>
<% end %>
