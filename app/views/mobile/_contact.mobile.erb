<% if @post %>
  <%= form_for @post, remote: true, id: 'post-doc', :html =>{"data-ajax" => false} do |f| %> 
    <div id="notice" style="display:none"></div>
    <div id="form_errors">
      <%= render partial: 'mobile/error_messages', :locals => { :target => f.object } %>
    </div>

    <%= f.hidden_field 'pixi_id', value: listing.pixi_id %>
    <%= f.hidden_field 'recipient_id', value: listing.seller_id %>
    <%= f.hidden_field 'user_id', value: @user.id %>

    <div class='clear-all'>
      <table>
        <tr>
          <td><%= f.text_area 'content', placeholder: 'Type message to seller...', class: 'slide-menu', 'data-mini'=>'true' %></td>
          <td><%= f.submit 'Send', id: 'contact-btn', 'data-inline'=>"true", 'data-mini'=>'true', 'data-theme'=>'b' %></td>
        </tr>
      </table>
    </div>
  <% end %>
<% end %>
