var formError = getFormID('#buyFormError');
var formTxtForm = getFormID('#buyTxtForm');

 /*Clear the entire form*/
$(":input:not(input[type=submit])").val("");

formTxtForm.attr("disabled", true);	
formError.hide(300);
formTxtForm.html("<%= escape_javascript( render(partial: "shared/listing_form", locals: {listing: @listing, step_name: 'Build Your Pixi', action_type: 'Save'}) ).html_safe %>");
formTxtForm.attr("disabled", false);	

// set page title
set_title('Build Pixi');

// scroll to top of page
$('html, body').animate({scrollTop:0}, 100);
$("#spinner").hide(300);
