<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="navbar-inner">
    <div class="container">
      <%= link_to "Pixiboard", root_path, id: "logo" %>
      <nav>
        <ul class="nav pull-right">
          <li><%= link_to "Help", help_path %></li>
	  <% if signed_in? %>
            <li><%= link_to "Add+", new_temp_listing_path %></li>
	    <% if can? :manage_items, @user %>
              <li id="fat-menu" class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown"> Manage <b class="caret"></b></a>
		  <ul class="dropdown-menu">
            	    <li><%= link_to "Pending Orders", pending_listings_path %></li>
	            <% if can? :manage_users, @user %>
            	      <li><%= link_to "Transactions", transactions_path %></li>
            	      <li><%= link_to "Users", users_path %></li>
	            <% end %>
                  </ul>
              </li>
	    <% end %>
            <li id="fat-menu" class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown"> Pixis <b class="caret"></b></a>
		<ul class="dropdown-menu">
            	  <li><%= link_to "All Pixis", listings_path %></li>
            	  <li><%= link_to "My Pixis", seller_listings_path %></li>
                </ul>
            </li>
            <li id="fat-menu" class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown"> Account <b class="caret"></b></a>
		<ul class="dropdown-menu">
	          <% if can? :view_dashboard, @user %>
            	    <li><%= link_to "Dashboard", '#' %></li>
		  <% end %>
                  <li><%= link_to "Profile", user_path(@user) %></li>
                  <li><%= link_to "Settings", '#' %></li>
	          <li class="divider"></li>
            	  <li><%= link_to "Sign out", destroy_user_session_path %></li>
                </ul>
            </li>
	  <% else %>
            <li><%= link_to "Sign in", new_user_session_path %></li>
	  <% end %>
        </ul>
      </nav>
    </div>
  </div>
</header>
