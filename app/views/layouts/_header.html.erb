<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="navbar-inner">
       <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
         <span class="icon-bar"></span>
	 <span class="icon-bar"></span>
         <span class="icon-bar"></span>
      </a>
      <%= pixi_home %>
      <div class="nav-collapse">
      <nav>
	<div id='search'><%= display_search %></div>
	<% if signed_in? %>
	  <%= render 'shared/msg_indicator' %>

          <ul class="nav pull-right">
	    <%= render 'layouts/post_menu' %>
            <% if @user.has_pixis? %>
    	      <li><%= link_to "Bill", get_invoice_path, id: 'bill-pixi' %></li>
  	    <% end %>
	    <% if @user.has_unpaid_invoices? %>
    	      <li><%= link_to "Pay", get_unpaid_path, id: 'pay-pixi' %></li>
  	    <% end %>

	    <%= render 'layouts/manage' if can? :manage_items, @user %>
