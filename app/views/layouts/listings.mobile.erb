<!DOCTYPE html>
<html>
  <head> 
    <%= yield :title %> 
    <%= render 'layouts/jqm' %>
    <%= stylesheet_link_tag "mobile", "image" %>  
    <%= csrf_meta_tag %>  	
  </head>
  <body>  
    <div id="app" data-role="page" data-iscroll="enable" data-cache="never" class='pixiPg'> 
      <div data-role="header" data-theme="d" id="app-header">
      	<%= yield :head %>
      	<%= yield :srch_content %>
      </div>
    
      <div class="app-content" data-role="content">   			
	<%= yield :subhead %>
 	<div data-iscroll="scroller" class="pixiPg" id="px-container">
      	  <%= yield :content %>
        </div>
      </div>
    
      <div id="app-footer" data-role="footer" class='home-pg'>		
      	<%= yield :footer %>
      </div>
    </div>  
  </body> 
</html>
