<div class="stitle center-wrapper">
  <% if controller_name == 'transactions' %>
    <%= link_to image_tag('sm_pixipay.png'), '#', class: "px-logo" %>
  <% elsif toggle_header?(psize) %>
    <h6><%= psize %></h6>
  <% else %>
    <%= pixi_home %>
  <% end %>
</div>

<% if user_signed_in? %>
  <%= link_to image_tag('rsz_list-view_blue.png'), "#navpanel", id: 'list', "data-theme"=>"app-bar" %>
  <%= link_to '#popupPix', "data-theme"=>"app-loc", 'data-rel'=>"popup", 'data-position-to'=>"window", 'data-transition'=>"pop" do %>
    <%= image_tag('rsz_camera-icon_blue.png') %>
  <% end %>
<% end %>

<%= render 'mobile/get_pix' %>

