<!DOCTYPE html>
<html>
<head>
  <link href="/assets/favicon.ico" rel="shortcut icon" />
  <title><%= full_title(yield(:title)) %></title>
  <%= stylesheet_link_tag    "application", "jquery.bxslider", "datepicker", "si.files", :media => "all" %>
  <%= stylesheet_link_tag "http://ajax.googleapis.com/ajax/libs/jqueryui/1.8.16/themes/base/jquery-ui.css" %>
  <%= javascript_include_tag "application", "http://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js", 'jquery.bxslider.min.js',
       "autocomplete-rails.js", "jquery.ui.autocomplete.html.js", 'bootstrap.min.js', 'jquery.rateit.min.js',
       'jquery.placeholder.min.js', 'bootstrap-datepicker.js', 'datepicker.js', 'si.files.js' %>
  <%= csrf_meta_tags %>
  <%= render 'layouts/shim' %>
</head>
<body>
  <div id='wrap'>
    <%= render 'layouts/header' %>
    <%= yield :subhead %>
    <div class="container">
      <div id="spinner" class="round" style="display:none"></div>
      <%= render 'layouts/flash_messages' %>
      <%= yield :content %>
    </div>
  </div>
  <div id='footer'>
    <div class="container">
      <div id="push"></div>
      <%= render 'layouts/footer' %>
    </div>
  </div>
</body>
</html>
