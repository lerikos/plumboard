<% unless @posts.blank? %>
  <table class="table table-hover table-condensed table-bordered">
    <thead>
    <tr>
      <th class='center-wrapper'>Post #</th>
      <th class='center-wrapper'><%= "#{get_name_header @status} Name" %></th>
      <th class='center-wrapper'><%= "#{get_col_header @status} Date" %></th>
      <th class='center-wrapper'><%= "#{get_col_header @status} Time" %></th>
      <th class='center-wrapper'>Qty</th>
      <th class='center-wrapper'>Value</th>
      <th class='center-wrapper'>Description</th>
      <th></th>
    </tr>
    </thead>
    <tbody>
        <%= render partial: 'shared/pixi_post_row', collection: @posts, as: :post %>
    </tbody>
  </table>
<% else %>
  <div class='center-wrapper'>No posts found.</div>
<% end %>

<div id='pxp-list' class="nav pull-right">
  <%= will_paginate @posts if @posts.respond_to?(:total_pages) %>
</div> 
