<% unless @sites.blank? %>    
  <div id='site_list'>
  	<div id="top-header" class='sm-top nav pull-right'>
      <%= link_to 'Export as CSV file', users_path(utype: @utype, format: "csv"), class: 'btn btn-small' %>
    </div>
    <div class='clear-all'></div>
    <div class='sm-top'>
      <table class="table table-hover table-condensed table-bordered">
        <thead>
          <tr>
            <th></th>
            <th>Name</th>
            <th>Type</th>
            <th>Status</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
			<%= render partial: 'shared/site_row', collection: @sites, as: :site %>
        </tbody>
      </table>
    </div> 
  </div> 
  <div id='site-list' class="nav pull-right">
      <%= will_paginate @sites if @sites.respond_to?(:total_pages) %>
  </div> 
  <div id="sm-top">
      <%= page_entries_info @sites, :model => 'sites' %>
  </div> 

<% else %>
  <div class='center-wrapper'>No sites found.</div>
<% end %>
