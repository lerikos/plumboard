<% if @post %>
  <%= form_for @post, remote: true do |f| %> 
    <div id="notice" style="display:none"></div>
    <% unless listing.seller?(@user.id) %>
      <div id="form_errors">
        <%= render partial: 'shared/error_messages', :locals => { :target => @post } %>
      </div>
      <%= f.text_area 'content', :autofocus => true, :placeholder=>'Type something...', id: 'post_content' %>  
    <% end %>  
    <%= f.hidden_field 'listing_id', value: listing.id %>
    <%= f.hidden_field 'pixi_id', value: listing.pixi_id %>
    <%= f.hidden_field 'recipient_id', value: listing.seller_id %>
    <%= f.hidden_field 'user_id', value: @user.id %>
    <div class='mbot pull-right'>
      <%= link_to 'Share', '#', class: 'btn btn-primary' %>
      <%= link_to 'Follow', '#', class: 'btn btn-primary' %>
      <%= link_to '#', class: 'btn btn-primary' do %>
        <i class="icon-comment icon-white"></i>
        Comment 
      <% end %>
      <%= f.submit 'Contact Owner', :class=>'btn btn-primary submit-btn', id: 'contact-btn', disabled: listing.seller?(@user.id) %>
    </div>
  <% end %>  
<% end %>  
