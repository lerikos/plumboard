<% unless @listing.is_a? TempListing %>
  <div id='comment-entry'>
    <div id='comment-hdr'><%= get_comment_header %></div>
    <%= render partial: "#{get_comment_form}" unless !@listing.active? || @listing.seller?(@user) %>
  </div> 
  <div id='comment-item'>
    <%= render 'shared/comment_list' %>
  </div> 
<% end %>
