<div class='center'>
  <h2>Setup Your Card Account</h2>
</div>
  <div class="row">
    <%= form_for(@account, html: { id: 'card-acct-form', class: "form-horizontal uform" }, :remote=>true) do |f| %>
      <div id="form_errors"><%= render partial: 'shared/error_messages', locals: { :target => f.object } %></div>
      <div id="data_error" style="display:none" class="error"></div>

      <div class="sm-top span6 offset3">
        <div id='signup'>
	    <div class="control-group">
	      <label class="control-label">Card #</label>
	      <div class='controls'><%= f.number_field :card_number, :size => 16, placeholder: 'Card Number', id: 'card_number' %></div>
	      <label class="control-label">Card Code</label>
	      <div class='controls'><%= f.number_field :card_code, :size => 4, placeholder: 'Card Code', id: 'card_code' %></div>
	      <div class='neg-top'>
	        <label class="control-label">Exp Month</label>
	        <div class='controls'>
                  <%= select_month nil, {add_month_numbers_true: true}, {name: 'expiration_month', id: "card_month", class: "sm-top span2"} %></div> 
	      </div>
	      <div class='clear-all'></div>
	      <label class="control-label">Exp Year</label>
	      <div class='controls'>
                <%= select_year nil, {start_year: Date.today.year, end_year: Date.today.year+15}, 
	           {name: 'expiration_year', id: "card_year", class: "sm-top span2"} %></div>
	      <label class="control-label">Postal Code</label>
	      <div class='controls'><%= f.number_field :zip, :size => 12, placeholder: 'Postal Code', id: 'card_zip' %></div>
	    </div>
        </div>
      </div>
      <%= f.hidden_field :user_id, value: @user.id %>
      <%= f.hidden_field :token, id: 'card_token' %>
      <%= f.hidden_field :card_no %>

      <div class="span4 offset5 mbot"><%= f.submit 'Save', class: "btn btn-large btn-primary submit-btn" %></div>
    <% end %>
  </div>

