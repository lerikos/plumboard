<tr>
  <td class='span1 center-wrapper'>
    <%= render partial: 'shared/show_picture', locals: {psize: 'tiny', model: invoice.listing} %>
  </td>
  <td class='span1'><div class='price'><%= link_to invoice.id, invoice, remote: true %></div></td>
  <td class='span2'><%= invoice.buyer_name %></td>
  <td class='span4'><%= link_to invoice.pixi_title, invoice.listing, class: 'pending_title' %></td>
  <td class='span1'><div class='price'><%= ntc(invoice.amount + invoice.get_fee) %></div></td>
  <td class='span1 center-wrapper'><%= invoice.status.titleize %></td>
  <td class='span1 center-wrapper'><%= link_to 'Details', invoice, class: 'btn btn-small' %></td>
</tr>
