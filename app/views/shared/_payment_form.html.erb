<div id="pmtForm">
  <%= render partial: 'shared/listing_header', :locals => { step_no: 3, step_name: step_name } %>
  <%= form_for @transaction, :url => transactions_url(:id=>@listing, :order=>@order), :html => {id: 'payment_form'}, validate: true do |f| %>
    <%= render :partial => 'shared/error_messages', :locals => { :target => @transaction } %>
    <div id="stripe_error" style="display:none" class="error"></div>
    <%= render 'shared/purchase_summary' %>
    <%= render :partial => 'shared/buyer_info', locals: { f: f } %>
    <%= render :partial => 'shared/credit_card_info' if @total > 0.0 %>
	
    <%= f.hidden_field :token %>
    <%= f.hidden_field :promo_code, :value=>get_promo_code %>
    <%= f.hidden_field :user_id, :value=>@transaction.user_id %>
    <%= f.hidden_field :amt, :value => @total, :id=>'amt' %>
    <%= f.hidden_field :description, :value => @order[:title] %>

    <div class="nav pull-right">
      <%= link_to '<< Prev Step: Review', @listing, class: 'btn btn-large btn-primary stnd-btn back-btn' %>
      <%= f.submit "Done!", :confirm => confirm_msg, :id => 'payForm', class: "btn btn-large btn-primary submit-btn" %>
    </div>
  <% end %>
</div>
