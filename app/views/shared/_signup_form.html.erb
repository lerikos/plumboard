      html: { multipart: true, id: 'register-form', class: 'uform no-bot'}) do |f| %>
      <%= render partial: 'shared/error_messages', :locals => { :target => resource } %>
      <div class="span3 center-wrapper">
        <%= render partial: 'shared/show_user_photo', locals: {f: f, model: resource, file_name: 'person_icon.jpg', idName: 'usr_photo', mFlg: false} %>
      </div>
      <div id='signup' class="<%= signup_class(src) %>">
