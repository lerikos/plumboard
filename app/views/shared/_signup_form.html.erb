	<% if @user.password_required? %>
    	  <div><%= f.password_field :password, placeholder: 'New password (min. 8 characters)', value: nil, required: true %></div>
	<% end %>
	<%= render partial: set_signup_partial(src), locals: {f: f} if src == 'new' %>
      </div>
      <%= render partial: set_signup_partial(src), locals: {f: f} unless src == 'new' %>
    <% end %>
  </div>
