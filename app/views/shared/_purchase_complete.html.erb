<div id="pmtForm">
  <div class='center hdr mbot'><h3 class='grp-hdr'><%= step_name %></h3></div>
  <div class='pull-right'>
    <%= image_tag('rsz_pixipay.png', class: 'ppay-logo') %>
  </div>
  <div class='big-top offset3'>
    <div class='mleft30'>
    <table>
       <% model.listings.each do |item| %>
         <tr><td class='cal-size'>
           <%= render partial: 'shared/show_photo', locals: {model: item, file_name: "tip-image", psize: '80x80', display_cnt: 0 } %>
             <div class="hdr mbot"><span class='mleft20 grp-hdr'><%= item.title %></span></div>
           </td>
        </tr>
      <% end %>
      <tr><td><%= render partial: 'shared/transaction_details', locals: {transaction: model, showAmt: false} %></td></tr>
    </table>  
    </div>
  </div>
  <%= show_rating model %>
</div>
