<% unless controller_name == 'pixi_posts' %>
  <%= collection_select(:invoice, :pixi_id, model.active_listings.reorder('title ASC'), :pixi_id, :title, 
    {selected: @invoice.pixi_id, include_blank: 'Select Pixi'}, { class: 'pixi-select' }) %>
<% else %>
  <%= collection_select(:pixi_post, :pixi_id, model.pixi_posted_listings, :pixi_id, :title, {selected: @post.pixi_id, include_blank: 'Select'}, 
    { class: 'pixi-select' }) %>
<% end %>

