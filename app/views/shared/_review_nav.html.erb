<%= link_to 'Edit', edit_temp_listing_path(listing), id: 'pixi-edit-btn', class: 'btn btn-large' unless expired_or_sold? listing %>
<% if listing.edit? %>
  <%= link_to 'Remove', listing, method: :delete, confirm: msg, class: 'btn btn-large' %>
  <%= link_to 'Cancel', get_return_path, confirm: msg, class: 'btn btn-large' %>
<% elsif listing.active? && controller_name == 'listings' %>
  <%= render partial: 'shared/button_menu', locals: {model: listing, atype: 'Remove'} %>
<% else %>
   <%= link_to 'Remove', listing, method: :delete, confirm: msg, class: 'btn btn-large' unless expired_or_sold?(listing) %>
<% end %>

<%= link_to "Repost!", repost_listing_path(listing), method: :put, class: "btn btn-large btn-primary submit-btn", id: 'px-repost-btn' if repost? listing %>
