<%= link_to 'Edit', edit_temp_listing_path(listing), class: 'btn btn-large' %>
<% if listing.edit? %>
  <%= link_to 'Cancel', root_path, confirm: msg, class: 'btn btn-large' %>
<% else %>
  <div class="btn-group">
    <button type="button" class="btn btn-large dropdown-toggle" data-toggle="dropdown">
      Remove <span class="caret icon-white"></span>
    </button>
    <ul class="dropdown-menu" role="menu">
      <%= remove_menu listing %>
    </ul>
  </div>
<% end %>

