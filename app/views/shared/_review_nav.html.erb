<% if !listing.sold? %>
  <%= link_to 'Edit', edit_temp_listing_path(listing), id: 'pixi-edit-btn', class: 'btn btn-large' %>
<% end %>
<% if listing.edit? %>
  <%= link_to 'Remove', listing, method: :delete, confirm: msg, class: 'btn btn-large' %>
  <%= link_to 'Cancel', get_home_path, confirm: msg, class: 'btn btn-large' %>
<% elsif listing.active? && controller_name == 'listings' %>
  <div class="btn-group">
    <button type="button" class="btn btn-large dropdown-toggle" data-toggle="dropdown">
      Remove <span class="caret icon-white"></span>
    </button>
    <ul class="dropdown-menu" role="menu">
      <%= remove_menu listing %>
    </ul>
  </div>
<% else %>
  <% if !listing.sold? %>
    <%= link_to 'Remove', listing, method: :delete, confirm: msg, class: 'btn btn-large' %>
  <% end %>
<% end %>

<% if (listing.sold? || listing.expired?) && (@user.is_admin? || (@user.id == @listing.seller_id)) %>
  <%= link_to "Repost!", repost_listing_path(listing), method: :put, class: "btn btn-large btn-primary submit-btn", id: 'px-repost-btn' %>
<% end %>
