<%= form_for([@usr, @usr.with_picture], url: user_path(@usr, target: 'shared/user_form'), html: {class: 'uform', id: 'prof-form'}, 
  data: {validate: 'parsley'}) do |f| %>
    <div id="form_errors"><%= render partial: 'shared/error_messages', locals: { target: f.object } %></div>
    <div class="span4 center-wrapper">
      <%= render partial: 'shared/show_user_photo', locals: {f: f, model: @usr, file_name: 'person_icon.jpg', idName: 'usr_photo', mFlg: false} %>
    </div>
    <div class="span5">
      <div id='signup'>
        <%= render partial: 'shared/user_info', locals: { f: f, user: @usr } %>
        <div class="mtop">
          <%= f.submit "Save Changes", class: "btn btn-large btn-primary submit-btn", data: {disable_with: "Submitting..."} %>
        </div>
      </div>
    </div>
<% end %>
