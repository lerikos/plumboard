<div class='height360'>
  <div class='row'>
    <div class="span12 mbot">
      <h4><%= listing.nice_title %></h4>
      Site: <%= listing.site_name %><br />
      Category: <%= listing.category_name %><br />
      <% if listing.price %>
        Price: <%= number_to_currency listing.price %><br />
      <% end %>
    </div>
  </div>

  <div class="grey-text mbot row">
    <div class="span4">
      ID: <%= listing.pixi_id %>
    </div>
    <div class="span4 center-wrapper">
      Posted: <%= get_local_time listing.start_date %>
    </div>
    <div class="span4">
      <span class='pull-right'>Updated: <%= get_local_time listing.updated_at %></span>
    </div>
  </div>
  <div class='row'>
    <div class="span6">
      <%= render partial: 'shared/photos', locals: {model: listing, file_name: "", psize: '120x120'} %>
    </div>
    <div class="span6">
      <div id='post_form'>
        <%= render partial: 'shared/contact_seller', locals: {listing: listing} %>
      </div>
    </div>
  </div>

  <div class="mtop row">
    <div class="span12 mbot">
      <%= listing.description %>
    </div>
  </div>
</div>
