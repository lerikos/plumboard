<% if model %>
  <% for pic in model.pictures %>
      <% unless pic.photo_file_name.blank? %>
	<%= image_tag pic.photo.url, :size => psize %>
	<%= link_to 'Remove', picture_path(pic, pixi_id: model), method: :delete, confirm: 'Image will be removed. Are you sure?', remote: true %>
      <% end %>
  <% end %>
<% end %>
