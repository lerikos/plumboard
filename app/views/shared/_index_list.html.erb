<% unless @listings.blank? %>
    <table class="table table-hover table-condensed table-bordered">
    <thead>
      <tr>
      <th></th>
      <th>Title</th>
      <th>Category</th>
      <th>Description</th>
      <th>Location</th>
      <th>Last Updated</th>
      <th></th>
    </tr>
    </thead>
    <tbody>
      <%= render partial: 'shared/listing_row', collection: @listings, as: :listing %>
    </tbody>
  </table>

  <div id='pixi-list' class="nav pull-right">
    <%= will_paginate @listings if @listings.respond_to?(:total_pages) %>
  </div>
<% else %>
  <div class='center-wrapper'>No pixis found.</div>
<% end %>