<% unless @invoices.blank? %>
    <table class="table table-hover table-condensed table-bordered">
    <thead>
    <tr>
      <th></th>
      <th class='center-wrapper'>Invoice #</th>
      <th class='center-wrapper'>Bill To</th>
      <th class='center-wrapper'>Description</th>
      <th class='center-wrapper'>Amount</th>
      <th class='center-wrapper'>Status</th>
      <th></th>
    </tr>
    </thead>
    <tbody>
        <%= render partial: 'shared/invoice', collection: @invoices %>
    </tbody>
  </table>
<% else %>
  <div class='center-wrapper'>No invoices found.</div>
<% end %>

<div class="nav pull-right">
  <%= will_paginate @invoices if @invoices.respond_to?(:total_pages) %>
</div> 
