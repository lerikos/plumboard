<% unless @users.blank? %>
  <div class='clear-all'></div>
  <table class="table table-hover table-condensed table-bordered">
    <thead>
      <tr>
      <th></th>
      <th>User Name</th>
      <th>Location</th>
      <th>Follow Date</th>
      </tr>
    </thead>
    <tbody>
      <%= render partial: 'shared/my_followers_row', collection: @users, as: :user %>
    </tbody>
  </table>

  <div id='pixi-list' class="nav pull-right">
    <%= will_paginate @users if @users.respond_to?(:total_pages) %>
  </div>
<% else %>
  <div class='center-wrapper'>No followers found.</div>
<% end %>