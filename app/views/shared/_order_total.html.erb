<%= render :partial => 'shared/show_discount', locals: {txn: txn} %> 
<% if model %>
  <% if model.tax_total.to_f > 0.0 %>
    <tr><td>Sales Tax</td><td> </td>
        <td class='width120' style='text-align: right'><div class='price'><%= ntc(model.tax_total.to_f) %></div></td>
    </tr>
  <% end %>
  <% if model.ship_amt.to_f > 0.0 %>
    <tr><td>Shipping</td><td> </td>
        <td class='width120' style='text-align: right'><div class='price'><%= ntc(model.ship_amt.to_f) %></div></td>
    </tr>
  <% end %>
<% end %>
<% if txn %>
  <%= render_conv_fee get_invoice(model), show_help?(txn), false %>
  <tr class='title-str'>
  	<td class='order-total'><%= show_title(paid) %></td>
  	<td> </td>
  	<td class='order-total price'><%= ntc(txn.amt) %></td>
  </tr>
<% end %>
