<% if listing.new_status? %>
  <% unless listing.free? %>
    <%= render :partial => 'shared/item_purchase', locals: {:listing=>listing} if listing.seller?(@user) %>
  <% end %>
<% end %>
<% if (listing.sold? || listing.expired?) && (@user.is_admin? || (@user.id == @listing.seller_id)) %>
  <%= link_to "Repost!", repost_listing_path(listing), method: :put, class: "btn btn-large btn-primary submit-btn", id: 'px-repost-btn' %>
<% else %>
  <%= link_to "Done!", submit_temp_listing_path(listing), method: :put, class: "btn btn-large btn-primary submit-btn", id: 'px-done-btn' %>
<% end %>
