<div class='row'>
<div class='offset3'>
  <% unless showAddrFlg %>
    <h5 class="grp-hdr">Request Information</h5>
  <% end %>
  <table>
    <tr><td class='span3'>Requested By:</td>
      <td><%= render partial: 'shared/show_picture', locals: {psize: 'tiny', model: post.user} %><%= post.seller_name %></td>
    </tr>
    <tr><td class='span3'>Preferred Date:</td><td><%= get_local_date(post.preferred_date) %></td></tr>
    <tr><td class='span3'>Preferred Time: </td><td><%= post.get_time('preferred_time') %></td></tr>
    
    <% unless post.alt_date.blank? %>
      <tr><td class='span3'>Alternate Date:</td><td><%= get_local_date(post.alt_date) %></td></tr>
      <tr><td class='span3'>Alternate Time: </td><td><%= post.get_time('alt_time') %></td></tr>
    <% end %>
    
    <tr><td class='span3'># of Items:</td><td><%= post.quantity %></td></tr>
    <tr><td class='span3'>Estimated Value:</td><td><%= number_to_currency(post.value) %></td></tr>
    <tr><td class='span3'>Description: </td><td><%= post.description %><br /></td></tr>

    <% if post.has_appt? %>
      <tr><td class='span3'>Appointment Date:</td><td><%= get_local_date(post.appt_date) %></td></tr>
      <tr><td class='span3'>Appointment Time: </td><td><%= post.get_time('appt_time') %></td></tr>
    <% end %>

    <% if post.is_completed? %>
      <tr><td class='span3'>Completed Date:</td><td><%= get_local_date(post.completed_date) %></td></tr>
      <tr><td class='span3'>Completed Time: </td><td><%= post.get_time('completed_time') %></td></tr>
    <% end %>
    
    <% if showAddrFlg %>
      <tr><td class='span3 v-top'>Address:</td><td>
        <%= post.address %><br>
        <%= "#{post.city}, #{post.state} #{post.zip}" %><br><%= post.home_phone %></td>
      </tr>
      <tr><td class='span3'>Submitted: </td><td><%= get_local_date(post.created_at) %></td></tr>
    <% end %>
  </table>
</div>
</div>
