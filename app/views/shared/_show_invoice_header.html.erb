<div class="row">
  <div class="span8">
    <label class='control-label'><span class='no-left span1'>Date: </span><%= get_local_date(invoice.inv_date) %></label>
    <%= render partial: 'shared/show_invoice_person', locals: {model: invoice.seller, fld: 'seller_name', invoice: invoice} %>
    <div class="big-top">
      <%= render partial: 'shared/show_invoice_person', locals: {model: invoice.buyer, fld: 'buyer_name', invoice: invoice} %>
    </div>
  </div>
  <div class="span4">
    <div class='pull-right'><%= image_tag('rsz_pixipay.png', class: 'ppay-logo') %></div>
    <div class='clear-all'></div>  
    <div class='sm-top order-total price'>INVOICE</div>
    <div class="sm-top price">
       <label class="control-label">Invoice # <%= invoice.id %></label>
    </div>
    <div class="sm-top price">
       <label class="control-label">Status: <%= invoice.nice_status %></label>
    </div>
  </div>
</div>

