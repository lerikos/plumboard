<tr>
  <td class='span1 center-wrapper'>
    <%= render partial: 'shared/show_temp_pixi_image', locals: {model: listing, pix_size: 'tiny', img_size: 'usr-sm-photo'} %>
  </td>
  <td class='span2'><%= link_to listing.title, set_pixi_path(listing), class: 'pending_title' %></td>
  <td class='span2'><%= listing.category_name %></td>
  <td class='span2'><%= listing.brief_descr %></td>
  <td class='span2'><%= listing.site_name %></td>
  <%= toggle_buyer_name_row(@status, listing) %>
  <td class='span2'><%= listing.display_date(set_date_field(listing, @status)) %></td>
  <td class='span1 center-wrapper'><%= link_to 'Details', set_pixi_path(listing), class: 'btn btn-small' %></td>
</tr>
