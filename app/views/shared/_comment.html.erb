<% cache comment do %>
<li id="<%= comment.id %>">
  <div class='span3 no-left'>
    <div class='sender'>
      <%= comment.sender_name %>
      <span class="timestamp">
        Posted <%= ts_in_words(comment.created_at) %>.
      </span>
    </div>
    <span class="content"><%= comment.summary %><%= link_to ' more...', '#', class: 'moreBtn' if comment.long_content? %></span>
    <span class='fcontent' style="display: none"><%= comment.full_content %></span>
  </div>
  <div class='pull-right'>
    <%= render partial: 'shared/show_picture', locals: {psize: 'tiny', model: comment.user} %>
  </div>
  <div class='clear-all'></div>
</li>
<% end %>
