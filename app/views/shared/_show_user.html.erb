<div class="row offset2">
  <div class="span8"><%= render partial: 'shared/user_band', locals: {user: user, pxFlg: true, colorFlg: false} %></div>
</div>
<%= render partial: 'shared/show_user_details', locals: {user: user, showFlg: true} %>
<% if @user.is_admin? %>
  <div class="mtop pull-right">
    <%= link_to 'Edit', edit_user_path(user), class: 'btn btn-large' %>
    <%= link_to 'Done', users_path(utype: user.user_type_code), class: 'btn btn-large btn-primary submit-btn' %>
  </div>
<% end %>
