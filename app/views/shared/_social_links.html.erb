<div id='soc-panel' class='neg-top right-form'>
  <div class="btn-group">
    <button type="button" class="btn dropdown-toggle clear-blk-btn" data-toggle="dropdown">
      Share <span class="caret icon-black"></span>
    </button>
    <ul class="dropdown-menu" role="menu">
      <li><%= link_to fb_share(listing), class: 'pixi-link', id: 'fb-link', target: :blank do %>
          <%= image_tag('pxb_facebook.png', class: 'social-img') %> Facebook
	<% end %>
      </li>
      <li><%= link_to tweet_share(listing), class: 'pixi-link', id: 'tw-link', target: :blank do %>
          <%= image_tag('pxb_twitter.png', class: 'social-img') %> Twitter
	<% end %>
      </li>
      <li><%= link_to pin_share(listing), class: 'pixi-link', id: 'pin-link', target: :blank do %>
          <%= image_tag('pxb_pinterest.png', class: 'social-img') %> Pinterest
	<% end %>
      </li>
    </ul>
  </div>
</div>
