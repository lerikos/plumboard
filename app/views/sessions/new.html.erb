<% provide(:title, 'Sign In') %>
<%= content_for :content do %>
  <div class="center">
    <p><h1>Sign in</h1></p>
  </div>

  <div class="row">
    <div class="mtop span4 offset4">
      <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
	<div id='signup'>
    	  <div><%= f.email_field :email, placeholder: 'Email', :autofocus => true %></div>
    	  <div><%= f.password_field :password, placeholder: 'Password', size: 20 %></div>
	</div>

    	<% if devise_mapping.rememberable? -%>
      	  <div>
	    <label class="checkbox">
	      Remember Me <%= f.check_box :remember_me %>
	    </label>
	  </div>
    	<% end -%><br />

    	<div>
	  <%= f.submit "Sign in", class: "btn btn-large btn-primary submit-btn" %>
          <%= link_to user_omniauth_authorize_path(:facebook), id: 'fb-btn' do %>
            <%= image_tag 'icon_facebook.png', class: 'lrg-img-icon' %>
          <% end %>
	</div>
      <% end %>

      <%- if devise_mapping.recoverable? && controller_name != 'passwords' %>
        <%= link_to "Forgot password?", new_password_path(resource_name) %><br />
      <% end -%>
    </div>
  </div>
<% end %>
