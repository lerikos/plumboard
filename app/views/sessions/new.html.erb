<% provide(:title, 'Sign In') %>
<%= content_for :content do %>
  <div class="center">
    <p><h1>Sign in</h1></p>
  </div>

  <div class="row">
    <div class="mtop span4 offset4">
      <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
	<div id='signup'>
    	  <div><%= f.email_field :email, placeholder: 'Email', :autofocus => true %></div>
    	  <div><%= f.password_field :password, placeholder: 'Password', size: 20 %></div>
	</div>

    	<% if devise_mapping.rememberable? -%>
      	  <div>
	    <label class="checkbox">
	      Remember Me <%= f.check_box :remember_me %>
	    </label>
	  </div>
    	<% end -%><br />

    	<div><%= f.submit "Sign in", class: "btn btn-large btn-primary submit-btn" %></div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
<% end %>
