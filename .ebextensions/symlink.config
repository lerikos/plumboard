sources:  
  /var/app/current/config/: https://s3.amazonaws.com/pixibucket01/pixicfg.tar.gz

container_commands:
  symlink-db:
    command: ln -sf /var/app/shared/database.yml /var/app/current/config/database.yml
  symlink-api:
    command: ln -sf /var/app/shared/api_keys.yml /var/app/current/config/api_keys.yml
  symlink-gateway:
    command: ln -sf /var/app/shared/gateway.yml /var/app/current/config/gateway.yml
  symlink-pixi:
    command: ln -sf /var/app/shared/pixi_keys.yml /var/app/current/config/pixi_keys.yml
  symlink-sphinx:
    command: ln -sf /var/app/shared/thinking_sphinx.yml /var/app/current/config/thinking_sphinx.yml
